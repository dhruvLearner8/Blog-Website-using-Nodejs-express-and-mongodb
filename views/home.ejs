<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= posts.title %></p>

<% for(var i=0; i<posts.length;i++) { %>
    <h2>
        <%= posts[i].title %>
    </h2>
    <p>
        <% if (posts[i].content.length<=10) { %>
            <%= posts[i].content %>
        <% } else{ %>
        
            <p><%= posts[i].content.toString().substring(1,10) %> <a href="/posts/<%= posts[i].title %>">Read more..</a></p> 
        <% } %>
    </p>
<% } %>

<%- include('partials/footer'); -%>